<%= content_for(:title, "Project") %>

<h1><%= @project.name %></h1>

<h3>Description</h3>
<p><%= @project.description %></p>

<h3>Team working on <%= @project.name %></h3>
<p><%= link_to @project.team.name, team_path(@project.team) %></p>

<h3>People working on <%= @project.name %></h3>
<ul>
  <% @project.users.each do |user| %>
    <li>
      <%= link_to user.username, user_path(user) %>
    </li>
  <% end %>
</ul>

<%= link_to "Edit ", edit_project_path(@project) %>
<%= back_to Team %>
